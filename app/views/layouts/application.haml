!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Share Knowledge"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    -#%script{:src=>"http://html5shim.googlecode.com/svn/trunk/html5.js",:type="text/javascript"}
    = stylesheet_link_tag "application", :media => "all"
%body
.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .span.offset3
        -#%a.brand.offset2{:href => "/"}
      .container.nav-collapse

        %ul.nav
          = render :template => "application/links"
        %ul.nav.pull-right
          - if current_user
            %li
              = render :template => "application/logged_in_menu"
          - else
            %li
              =link_to "Sign Up", new_user_registration_path()
            %li
              = render :template => "application/sign_in_form"
/ /.nav-collapse
.container
  .row
    .span9
      = yield
    - if current_user
      .span3
        .well.sidebar-nav
          Welcome
          = current_user.name
        = yield :content

  %footer
    %p{:style => "text-align:center"} CFC Â© Company 2012
  = javascript_include_tag "application"
  = yield :js
